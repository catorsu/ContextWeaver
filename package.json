{
  "name": "contextweaver-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for ContextWeaver VS Code and Chrome extensions.",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "check": "pnpm --recursive run check",
    "vscode:build": "echo \"VSCE build script placeholder\"",
    "chrome:build": "echo \"CE build script placeholder\"",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "coverage": "npm run test:coverage"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "vscode-extension",
    "chrome-extension",
    "llm",
    "context"
  ],
  "author": "ContextWeaver Development Assistant"
}