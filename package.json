{
  "name": "contextweaver-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for ContextWeaver VS Code and Chrome extensions.",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "check": "npm exec --workspaces -- tsc --noEmit && npm run lint --workspaces --if-present",
    "vscode:build": "echo \"VSCE build script placeholder\"",
    "chrome:build": "echo \"CE build script placeholder\"",
    "test": "npm run test --workspaces --if-present"
  },
  "workspaces": [
    "packages/*"
  ],
  "overrides": {
    "@typescript-eslint/parser": "^7.14.0",
    "@typescript-eslint/eslint-plugin": "^7.14.0",
    "@typescript-eslint/typescript-estree": "^7.14.0"
  },
  "keywords": [
    "vscode-extension",
    "chrome-extension",
    "llm",
    "context"
  ],
  "author": "ContextWeaver Development Assistant"
}